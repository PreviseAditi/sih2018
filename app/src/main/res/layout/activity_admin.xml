<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kritisharma.sih2018.admin">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
      <ScrollView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@android:color/holo_green_light">
         <LinearLayout
             android:layout_width="320dp"
             android:layout_height="70dp"
             android:layout_marginRight="10dp"
             android:orientation="vertical"
             >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="India job market may expand 20% next financial year	"
              android:textSize="20dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="economictimes.com"
               android:textColor="@android:color/holo_red_dark"
               android:textSize="10dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last year, there had been issues such as the after-effects of demonetisation , glitches related to GST and uncertainties over outsourcing in the US, which made industry take a slight pause to understand where it was heading, said BN Thammaiah, managing director, Kelly Services.“The overall positive business sentiment along with the bouncing back of sectors such as consumer goods, infrastructure, auto and financial services has led to a pickup in hiring mandates,” Singh added."/>


         </LinearLayout>


      </ScrollView>


           <ScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="320dp"
                   android:layout_height="70dp"
                   android:layout_marginRight="10dp"
                   android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sales domain has potential to create 2.5 million jobs in three years"
                   android:textSize="20dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="timesofindia.indiatimes.com"
                   android:textColor="@android:color/holo_red_dark"
                   android:textSize="10dp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="According to the analysis, a combination of macro-economic, strategic and technological factors like GST, FDI, digitization and Artificial Intelligence (AI) will help in realizing the exponential opportunities the domain presents.Rituparna Chakraborty, EVP and Co-Founder, TeamLease Services said, “By just doing 10 regulatory reforms we can create 10 millions sales jobs and this is an opportunity India which is at a critical demographic crossroad, simply can’t lose out on."/>

</LinearLayout>

           </ScrollView>


           <ScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@android:color/holo_green_light">
               <LinearLayout
                   android:layout_width="320dp"
                   android:layout_height="70dp"
                   android:layout_marginRight="10dp"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Telecom sector to add over 10 million jobs in next five years, claims TSSC"
                       android:textSize="20dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="www.businesstoday.com"
                       android:textColor="@android:color/holo_red_dark"
                       android:textSize="10dp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Kochhar says that that demand for employment will come from new areas such as mobile manufacturing, machine-to-machine, big data, automation and IoT (internet of things).In the traditional space, things are getting automated which is changing the existing job profiles and leading to upskilling."/>
               </LinearLayout>




           </ScrollView>



       </LinearLayout>


    </HorizontalScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="GENERAL ANALYSIS:"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="20dp"
        android:textSize="30dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="location"
        android:id="@+id/btloc"

        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:text="sector"
        android:id="@+id/btsec"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="user data analysis"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/btudata"
        android:layout_gravity="center_horizontal"/>


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="REPORTS"
         android:textColor="@android:color/holo_red_dark"
         android:layout_marginTop="30dp"
         android:layout_gravity="center_horizontal"
         android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="report 1"
            android:id="@+id/rep1"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textColor="@android:color/holo_red_light"
            android:text="report 2"
            android:id="@+id/rep2"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="report 3"
            android:id="@+id/rep3"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"/>


    </LinearLayout>


</LinearLayout>
